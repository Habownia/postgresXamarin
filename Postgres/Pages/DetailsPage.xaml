<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Postgres.Pages.DetailsPage">
    <ContentPage.Content>
        
        <StackLayout Padding="20">
            <Label Text="{Binding Name}" FontSize="30" />
            <Label Text="{Binding Date, StringFormat='Utworzono: {0:HH:mm dd.MM.yyyy}'}" FontSize="14"/>
            <Label Text="{Binding Description}" FontSize="18"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>