<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Postgres.CreatorPage">
    <ContentPage.Content>
        
        <StackLayout Padding="20">
            <Entry x:Name="titleEntry" Placeholder="Tytuł posta" />
            <Editor x:Name="descriptionEntry" Placeholder="Tutaj wpisz treść posta!" HeightRequest="400" />
            <Button Text="Zapisz" Clicked="SavePost"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>